<mujoco model="double_pendulum">
  <compiler angle="radian"/>
  <option gravity="0 0 -9.81" timestep="0.001" integrator="RK4"/>

  <visual>
    <headlight diffuse="0.8 0.8 0.8" ambient="0.25 0.25 0.25"/>
  </visual>

  <worldbody>
    <light pos="0 -2.2 1.6" dir="0 1 -0.7"/>
    <camera name="cam_side" pos="0 -2.4 0.2" xyaxes="1 0 0 0 0.15 0.99"/>

    <body name="link1" pos="0 0 0">
      <joint name="hinge1" type="hinge" axis="0 1 0" damping="0"/>

      <!-- Point-mass approximation at distal end of link1 -->
      <inertial pos="0 0 -1" mass="1.0" diaginertia="1e-6 1e-6 1e-6"/>

      <!-- Visual-only rod -->
      <geom name="rod1" type="capsule" fromto="0 0 0 0 0 -1" size="0.03" mass="0" rgba="0.30 0.55 0.95 1"/>
      <geom name="bob1" type="sphere" pos="0 0 -1" size="0.05" mass="0" rgba="0.20 0.40 0.80 1"/>

      <body name="link2" pos="0 0 -1">
        <joint name="hinge2" type="hinge" axis="0 1 0" damping="0"/>

        <!-- Point-mass approximation at distal end of link2 -->
        <inertial pos="0 0 -1" mass="1.0" diaginertia="1e-6 1e-6 1e-6"/>

        <!-- Visual-only rod -->
        <geom name="rod2" type="capsule" fromto="0 0 0 0 0 -1" size="0.028" mass="0" rgba="0.95 0.50 0.25 1"/>
        <geom name="bob2" type="sphere" pos="0 0 -1" size="0.05" mass="0" rgba="0.85 0.35 0.15 1"/>
      </body>
    </body>
  </worldbody>
</mujoco>
